<% content_for :page_intro, "Membership Categories" %>
<%= button_row do %>
  <%= link_to_if_permitted :new, :membership_categories, "New Membership Category" %>
<% end %>

<table id="membership_categories" class="discussions-archive-table left">
  <tr>
    <th>Name</th>
    <th>Kind</th>
    <th>Action</th>
  </tr>

<% @membership_categories.each do |category| %>
  <tr>
    <td><%= link_to category.name, category %></td>
    <td><%= category.kind %></td>
    <td><%= link_to_if_permitted :edit, category, '[Edit]'%> 
        <%= link_to_if_permitted :destroy, category, '[Destroy]', 
                                 :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
