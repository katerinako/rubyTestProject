<%= classy_field designation.kind do %>
   <%= link_to designation.member.name, designation.member %>
   <% if permitted_to? :manage, :designations %>
     <br />
     <em>
       (<%= designation.from_date %> -
       <% if designation.to_date %> 
          <%= designation.to_date %>)
       <% else %>
         )
       <% end %>
      </em> 
    <% end %>
    <br />
    <% if permitted_to? :edit, designation %> 
      <%= link_to "[Edit Designation]", edit_designation_path(designation, :coming_from => 'organizational_unit') %> |
    <% end %>
    <% if permitted_to? :remove_designation, owner %>
      <%= link_to "[Remove Designation]", 
          self.send(remover, owner, :designation_id => designation.id), :method => :post %>
    <% end %>
<% end %>
