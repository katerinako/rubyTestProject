<h1>Import Member Data</h1>

<%= form_for(@import, :as => :import, :url => import_index_path, :html => {:multipart => true}) do |f| %>
  <%= f.classy_submit nil, content_for(:back) %>

  <% if @import.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@import.errors.count, "error") %> prohibited this attachment from being saved:</h2>

      <ul>
      <% @import.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-wrapper">
    <fieldset>
      <%= f.classy_file_field "Excel File", :data_file %>
    </fieldset>
  </div>

<% end %>
